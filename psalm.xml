<?xml version="1.0"?>
<psalm 
    errorLevel="7"
    resolveFromConfigFile="true"

    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config" xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
    undefinedGlobalVariable="false"
    phpVersion="8.2">

    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="src/vendor" />
        </ignoreFiles>

    </projectFiles>
    <issueHandlers>
        <UndefinedGlobalVariable errorLevel="suppress"/>
        <PossiblyUnusedMethod errorLevel="suppress"/>
        <InvalidScope errorLevel="info"/>
    </issueHandlers>
</psalm>
